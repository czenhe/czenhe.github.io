{
  "extends": "./.svelte-kit/tsconfig.json",
  "include": ["./.svelte-kit/ambient.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": false
  }
}
